{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "noUnusedParameters": true,
    "noUnusedLocals": false,
    "noEmit": true,
    "allowSyntheticDefaultImports": true, // 如果需要支持默认导入CommonJS模块
    "resolveJsonModule": true, // 如果需要导入JSON文件
    "esModuleInterop": true, // 为了更好地与CommonJS模块交互
    "allowImportingTsExtensions": true, // 允许导入.ts和.tsx扩展名结尾的文件（TypeScript 4.5+）
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxImportSource": "vue",
    "jsxFragmentFactory": "Fragment",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["vite/client"],
    "lib": ["ES6", "dom", "esnext", "ScriptHost", "DOM.Iterable", "ES2018.RegExp"],
    "typeRoots": ["types"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "types/*.d.ts",
    "types/*.ts",
    "vite.config.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
